{
  "compilerOptions": {
    "target": "ES5",
    "lib": [
      "dom",
      "dom.iterable",
      "esnext"
    ],
    "alwaysStrict": true,
    "noUnusedLocals": false,
    "noUnusedParameters": true,
    "esModuleInterop": true,
    "module": "ESNext",
    "moduleResolution": "node",
    "jsx": "react",
    "rootDir": "src",
    "baseUrl": "src",
    "paths": {
      "@/*":["*"]
    },
    "allowJs": true,
    "resolveJsonModule": true,
  },
  "include": [
    "src"
  ],
  "exclude": [
    "./src/**/*.spec.ts",
    "./src/**/*.spec.tsx",
    "./src/**/tests/*",
    "node_modules"
  ]
}
